{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Connect to Docker Delve",
        "type": "go",
        "request": "attach",
        "mode": "remote",
        "remotePath": "/app",
        "port": 2345,
        "host": "localhost",
        "showLog": true,
        "trace": "verbose",
        "logOutput": "rpc",
        "apiVersion": 2,
        "substitutePath": [
          {
            "from": "${workspaceFolder}",
            "to": "/app"
          }
        ],
        "showGlobalVariables": true
      },
      {
        "name": "Debug API (Local)",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "program": "${workspaceFolder}/cmd/api",
        "env": {
          "DB_HOST": "localhost",
          "DB_PORT": "5432",
          "DB_USER": "devuser",
          "DB_PASSWORD": "devpassword",
          "DB_NAME": "history_masters_dev"
        },
        "args": []
      }
    ]
  }